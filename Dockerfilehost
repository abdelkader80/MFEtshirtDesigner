
# Stage 1

FROM node:14-alpine as build-step


RUN npm install -g @angular/cli@10


WORKDIR /app


COPY package.json /app


RUN yarn install 

RUN npm install -D typescript@4.0.2

COPY . /app

EXPOSE 4200

CMD ng serve host --host 0.0.0.0


